version: "3"
services:
  proxy:
    image: ghcr.io/interfacerproject/interfacer-proxy:latest
    working_dir: /app
    ports:
      - "{{ port }}:80"
    environment:
      ZENFLOWS_URL: "{{ zenflows }}"
      HERE_KEY: "{{ here_api }}"
      ADDR: :80
      INBOX_URL: "http://inbox"
      WALLET_URL: "http://wallet"
      INTERFACER_DPP_URL: "http://interfacer-dpp"
      OSH_URL: "http://osh/"
      IFACER_LOG: "/log"
    extra_hosts:
      - "gateway0.interfacer.dyne.org:10.202.41.10"
  inbox:
    image: ghcr.io/interfacerproject/zenflows-inbox:main
    working_dir: /app
    ports:
      - "{{ inbox_port }}:80"
    environment:
      TT_HOST: "db_inbox:3500"
      TT_USER: "inbox"
      TT_PASS: "inbox"
      ZENFLOWS_URL: "{{ zenflows }}"
      BASE_URL: "https://{{ domain_name }}/inbox"
      ZENFLOWS_SK: "{{ zenflows_sk }}"
      ZENFLOWS_USER: "{{ zenflows_user }}"
    depends_on:
      - db_inbox
    extra_hosts:
      - "gateway0.interfacer.dyne.org:10.202.41.10"
  db_inbox:
    image: "ghcr.io/interfacerproject/zenflows-inbox-db:main"
    restart: always
    volumes:
      - inbox_data:/var/lib/tarantool
    extra_hosts:
      - "gateway0.interfacer.dyne.org:10.202.41.10"
  wallet:
    image: ghcr.io/interfacerproject/zenflows-wallet:latest
    working_dir: /app
    ports:
      - "{{ wallet_port }}:80"
    environment:
      TT_HOST: "db_wallet:3500"
      TT_USER: "wallet"
      TT_PASS: "wallet"
      ZENFLOWS_URL: "{{ zenflows }}"
    depends_on:
      - db_inbox
    extra_hosts:
      - "gateway0.interfacer.dyne.org:10.202.41.10"
  db_wallet:
    image: "ghcr.io/interfacerproject/zenflows-wallet-db:main"
    restart: always
    volumes:
      - wallet_data:/var/lib/tarantool
    extra_hosts:
      - "gateway0.interfacer.dyne.org:10.202.41.10"
  mongodb:
    image: mongo:latest
    container_name: dpp-mongodb
    ports:
      - "27017:27017"
    volumes:
      - mongodb_data:/data/db
    networks:
      - dpp-network

  interfacer-dpp:
    image: ghcr.io/interfacerproject/interfacer-dpp:main
    container_name: interfacer-dpp
    ports:
      - "8080:8080"
    environment:
      - MONGODB_URI=mongodb://mongodb:27017
    depends_on:
      - mongodb
    networks:
      - dpp-network
volumes:
  wallet_data:
  inbox_data:
  mongodb_data:

networks:
  dpp-network:
    driver: bridge